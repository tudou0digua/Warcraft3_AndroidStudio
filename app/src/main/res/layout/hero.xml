            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView_hero"
            android:layout_toRightOf="@id/imageView_hero"
            android:layout_marginLeft="5dp"
            android:max="10"
            android:progress="1"
