                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_skill_1"
                android:layout_toRightOf="@+id/imageView_skill_1"
                android:textColor="#EEDC82"
                android:textSize="16sp"
                android:singleLine="true"
                android:text="专注光环 Devotion Aura"
                />
            <TextView
                android:id="@+id/textView_skill_desc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_skill_name_1"
                android:layout_alignLeft="@+id/textView_skill_name_1"
                android:textColor="#1874CD"
                android:textSize="12sp"
                android:text="增加光环范围内友军单位的护甲."
                />
            <TextView
                android:id="@+id/textView_skill_detail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_skill_1"
                android:layout_marginTop="5dp"
                android:textColor="#1874CD"
                android:text="作用范围:90\n等级1:+1.5点护甲\n等级2:+3点护甲\n等级3:+4.5点护甲"/>

        </RelativeLayout>

